.movie {
  display: flex;
}

.movie-detail {
  display: flex;
  flex-direction: column;
  /* 750-200 */
  width: 550rpx;
}

.movie-image {
  width: 200rpx;
  height: 200rpx;
}

.movie-swiper {
  /* 设置到页面高度的90% */
  height: 100vh;
}

.movie-card {
  height: 100%;
  width: 100%;
  /* 为了看到效果将留空背景色改成灰色 */
  background: #eee;
  /* 相邻两张照片之间留50边距 */
  margin: 0 50rpx;
}

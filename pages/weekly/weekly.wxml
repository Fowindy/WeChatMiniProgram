<!-- class="container"应用全局样式 -->
<view class="container">
  <text>本周推荐</text>
  <image src="{{thisWeekMovie.imagePath}}"></image>
  <text>{{thisWeekMovie.name}}</text>
  <text>点评:{{thisWeekMovie.comment}}</text>
  <text>{{count + score}}</text>
  <!-- 条件表达式 -->
  <text>{{(score>=60)?"及格":"不及格"}}</text>
</view>